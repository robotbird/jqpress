@using Jqpress.Core.Template
@Model Jqpress.Web.Models.BaseModel
@{
  var site = new JTag.Site();  
  }
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" >
<head profile="http://gmpg.org/xfn/11">
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
	<title>@if(site.IsDefault==0) {@site.PageTitle}  else {@site.SiteName}</title>
	<meta name="keywords" content="@site.MetaKeywords" />
   <meta name="description" content="@site.MetaDescription" />
    <link rel="stylesheet" type="text/css" media="all" href="/Themes/@site.ThemeName/Content/style.css" />

	
	<script type="text/javascript" src="@site.SiteUrl/common/scripts/jquery.js"></script>
<script type="text/javascript" src="@site.SiteUrl/common/scripts/common.js"></script>
</head>

<body class="home blog">
<header id="header">
	<hgroup>
		<h1 id="logo"><a href="@site.SiteUrl">@site.SiteName</a></h1>
		<h2>@site.SiteDescription</h2>
	</hgroup>
</header>
<div id="wrap">
    
    @Html.Action("Header","Home")

    <div id="toolbar">
        <div id="rss"><a href="@site.FeedUrl" title="RSS Feed">RSS</a></div>
        <form id="searchform" method="get" action="@site.SiteUrl">
            <input type="text" value="@site.SearchKeyword" id="keyword" name="keyword" size="30" placeholder="Search" autocomplete="off" required />
            <button type="submit">Search</button>
        </form>
    </div>
    <div id="content">

        <!--中部-->


        @RenderBody()


    </div>
</div>

@Html.Action("Footer", "Home")


</body>
</html>
