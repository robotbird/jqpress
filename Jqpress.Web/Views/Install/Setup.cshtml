@model Jqpress.Web.Models.InstallModel
@{
    Layout = "_Layout.cshtml";
}
<h1>系统设置</h1>
<p>请正确配置您的站点信息，并牢记用户名密码</p>

@foreach (var item in ViewData)
{
    <div class="alert alert-warning" role="alert">
        @item.Value
    </div>
}




<form method="POST"  action="@Url.Action("Setup", "Install")" >
         
         <table class="form-table">
		<tr>
			<th scope="row"><label for="SiteName">站点名称：</label></th>
			<td><input type="text" name="SiteName" class="form-control" placeholder="站点名称"/></td>
			<td>将来会显示到网站的标题上</td>
		</tr>
		<tr>
			<th scope="row"><label for="UserName">用户名：</label></th>
			<td><input type="text" name="UserName" class="form-control" placeholder="用户名" /></td>
			<td>您登录后台的用户名</td>
		</tr>
             <tr>
                 <th scope="row"><label for="PassWord">密码：</label></th>
                 <td><input type="password" name="PassWord" class="form-control" placeholder="密码"  autocomplete="off" /></td>
                 <td>您登录后台的密码</td>
         </tr>
         <tr>
			<th scope="row"><label for="ConfirmPassword">确认密码：</label></th>
			<td><input type="password" name="ConfirmPassword" class="form-control" placeholder="确认密码"  autocomplete="off" /></td>
			<td>请再输入一次密码</td>
		</tr>
         </table>
         
       <p><button class="btn btn-default" type="submit">安装</button></p>
  </form>


   
