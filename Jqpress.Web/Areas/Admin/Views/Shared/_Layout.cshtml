<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
  <link href="@Url.Content("~/Content/layout.css")" rel="stylesheet" type="text/css" media="screen" />
 <script type="text/javascript" src="@Url.Content("~/Scripts/jquery.js")"></script>
    
</head>
<body>
    
    
<div class="clr" >
<div id="adm_header">
	   <div class="right">
		 <div class="top_account">@Jqpress.Blog.Common.AdminPage.CurrentUser.UserName</div>
		 <div class="top_link"><a onClick="return confirm('确定要退出吗？')" href="../login.aspx?act=logout" class="link2">退出</a></div>
       </div>

	   <div class="left" style="padding-top:10px">
				<a href="#" target="_blank"></a>
	   </div>
       
	   <div  class="sitetitle">
		 <h1><span>@Jqpress.Blog.Configuration.BlogConfig.GetSetting().SiteName</span></h1>
	   </div>
         
       <div id="topmenu" >
            <ul>
                <li class="current"><a href="@Url.Action("index","home")">控制台</a></li>
          </ul>
        </div>
</div>


<div class="body_container">
	<div class="body_left">
		<div class="menu_title1"><a href="@Url.Action("list", "post", new { area ="admin" })">文章</a></div>
		<div class="menu_title2"><a href="@Url.Action("list","post")">文章列表</a></div>
		<div class="menu_title2"><a href="@Url.Action("list", "post", new { poststatus = 1 })">私有文章</a></div>
		<div class="menu_title2"><a href="@Url.Action("edit","post")">添加新文章</a></div>
		<div class="menu_title2"><a href="@Url.Action("list","category")">分类目录</a></div>
		<div class="menu_title2"><a href="@Url.Action("list","tag")">文章标签</a></div>
		<div class="menu_title2"><a href="@Url.Action("list","comment")">文章评论</a></div>

        <div class="menu_title1"><a href="link_list.aspx">页面管理</a></div>
		<div class="menu_title2"><a href="link_list.aspx">页面列表</a></div>
		<div class="menu_title2"><a href="link_list.aspx">添加页面</a></div>

		
		<div class="menu_title1"><a href="@Url.Action("list","user")">用户</a></div>
		<div class="menu_title2"><a href="@Url.Action("list","user")">用户管理</a></div>

			
		<div class="menu_title1"><a href="blog_set.aspx" >设置</a></div>
		<div class="menu_title2"><a href="blog_set.aspx" >站点设置</a></div>
        <div class="menu_title2"><a href="theme_list.aspx" >主题设置</a></div>

        
        <div class="menu_title1"><a href="#" >工具</a></div>
        <div class="menu_title2"><a href="@Url.Action("list","files")" >文件管理</a></div>
		<div class="menu_title2"><a href="blog_db.aspx" >数据库备份</a></div>
		
	</div>
	<div class="body_middle">
	
		 @RenderBody()
	
   <div style="clear:both;"></div>
		
	</div>
</div>
</div>



<div id="footer">
<p class="alignleft" id="footer-left"><span id="footer-thankyou">感谢使用 <a href="http://www.jqpress.com/">jqpress</a> 进行创作。</span> |
 <a href="http://www.jqpress.com/">官方文档</a> | <a href="http://www.jqpress.com/">反馈</a>

<strong>
技术支持：robotbird@qq.com</strong>
</p>
<div class="clear"></div>
</div>
    
    
</body>
</html>
