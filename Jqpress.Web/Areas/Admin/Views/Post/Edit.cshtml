                  <div class="portlet-body form">
                     <form name="form1" method="post" action="@Url.Action("SavePost", "Post")"  >
                      <input type="hidden"  id="PostId" name="PostId" value="@Model.Post.PostId" />

                        <div class="form-body">
                           <div class="form-group">
